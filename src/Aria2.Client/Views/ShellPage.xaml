<Page
    x:Class="Aria2.Client.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Aria2.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="using:CommunityToolkit.WinUI.Controls"
    xmlns:tb="using:H.NotifyIcon"
    xmlns:ui="using:Aria2.Client.UI.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand, Mode=OneWay}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <tb:TaskbarIcon ContextMenuMode="SecondWindow" ToolTipText="Aria2.Client">
            <tb:TaskbarIcon.IconSource>
                <tb:GeneratedIconSource
                    FontFamily="Segoe UI Emoji"
                    FontSize="57"
                    FontWeight="Bold"
                    Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                    Text="&#x1F447;" />
            </tb:TaskbarIcon.IconSource>
        </tb:TaskbarIcon>
        <Image
            Grid.RowSpan="2"
            Opacity="0.8"
            Source="{x:Bind ViewModel.WallpaperUrl.Link, Mode=OneWay}"
            Stretch="UniformToFill" />
        <ui:TitleBar
            x:Name="TitleBar"
            FooterVerticalAlignment="Center"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Tall"
            TitleVerticalAlignment="Center">
            <ui:TitleBar.Header>
                <MenuBar Margin="3">
                    <MenuBarItem Title="程序">
                        <MenuFlyoutSubItem Text="添加任务">
                            <MenuFlyoutSubItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE710;" />
                            </MenuFlyoutSubItem.Icon>
                            <MenuFlyoutItem Command="{x:Bind ViewModel.ShowAddUriCommand}" Text="URL" />
                            <MenuFlyoutItem Command="{x:Bind ViewModel.ShowAddTorrentCommand}" Text="种子(.torrent)" />
                        </MenuFlyoutSubItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutSubItem Text="退出">
                            <MenuFlyoutSubItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE894;" />
                            </MenuFlyoutSubItem.Icon>
                            <MenuFlyoutItem Text="托盘" />
                            <MenuFlyoutItem Text="直接退出" />
                        </MenuFlyoutSubItem>
                    </MenuBarItem>
                    <MenuBarItem Title="搜索">
                        <MenuFlyoutItem Command="{x:Bind ViewModel.GoAnimePageCommand}" Text="Anime Garden">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe UI Emoji" Glyph="&#x2721;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Command="{x:Bind ViewModel.GoSearchPageCommand}" Text="搜索种子">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE721;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuBarItem>
                    <MenuBarItem Title="关于" />
                </MenuBar>
            </ui:TitleBar.Header>
            <ui:TitleBar.Footer>
                <Button
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Button_Click"
                    Style="{ThemeResource TransparentButtonStyle}">
                    <Grid>
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="15"
                            Glyph="&#xE8BD;" />
                        <InfoBadge
                            Margin="0,-7,-7,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Visibility="{x:Bind ViewModel.MessageInfoVisibility, Mode=OneWay}"
                            Value="{x:Bind ViewModel.MessageCount, Mode=OneWay}" />
                    </Grid>
                </Button>
            </ui:TitleBar.Footer>
        </ui:TitleBar>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Rectangle
                Width="20"
                Height="20"
                Fill="{x:Bind ViewModel.ConnectState, Mode=OneWay}"
                RadiusX="20"
                RadiusY="20" />
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind ViewModel.ConnectText, Mode=OneWay}" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Frame x:Name="frame" Margin="0" />
            <SplitView
                x:Name="splitView"
                CompactPaneLength="48"
                DisplayMode="Overlay"
                OpenPaneLength="300"
                PaneBackground="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                PanePlacement="Right">
                <SplitView.Pane>
                    <Grid
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Margin="8,8,0,0"
                            HorizontalAlignment="Left"
                            Text="消息" />
                        <Button
                            Margin="0,5,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{x:Bind ViewModel.ClearMessageCommand, Mode=OneWay}"
                            Style="{ThemeResource TransparentButtonStyle}"
                            ToolTipService.ToolTip="清空消息">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                FontSize="10"
                                Glyph="&#xE894;" />
                        </Button>
                        <ScrollView Grid.Row="1">
                            <ItemsControl ItemsSource="{x:Bind ViewModel.MessageList, Mode=OneWay}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid
                                            Margin="5"
                                            Padding="5"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Margin="5"
                                                FontSize="12"
                                                Text="{Binding Data.Title, Mode=OneWay}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="5,8,5,5"
                                                FontSize="10"
                                                Foreground="{ThemeResource SystemColorGrayTextBrush}"
                                                Text="{Binding Data.Message, Mode=OneWay}" />
                                            <StackPanel
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,5,5,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource SystemChromeGrayColor}"
                                                    Text="{Binding DelayValue, Mode=OneWay}"
                                                    Visibility="{Binding TimeSpanVisibility, Mode=OneWay}" />
                                                <Button
                                                    Command="{Binding CloseCommand, Mode=OneWay}"
                                                    IsEnabled="{Binding Data.IsClear, Mode=OneWay}"
                                                    Style="{ThemeResource TransparentButtonStyle}"
                                                    Visibility="{Binding CloseButtonVisibility, Mode=OneWay}">
                                                    <FontIcon
                                                        FontFamily="Segoe Fluent Icons"
                                                        FontSize="10"
                                                        Glyph="&#xE894;" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemContainerTransitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                        <AddDeleteThemeTransition />
                                    </TransitionCollection>
                                </ItemsControl.ItemContainerTransitions>
                            </ItemsControl>
                        </ScrollView>
                    </Grid>
                </SplitView.Pane>
            </SplitView>
        </Grid>

    </Grid>
</Page>
